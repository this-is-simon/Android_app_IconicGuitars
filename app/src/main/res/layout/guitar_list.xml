<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onListItemClick">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">

    <TextView
        android:id="@+id/rankingTextViewID"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="343dp"
        tools:text="TextView" />

    <TextView
        android:id="@+id/guitarTitleTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/rankingTextViewID"
        tools:layout_editor_absoluteY="343dp"
        tools:text="GuitarName" />

    <TextView
        android:id="@+id/yearTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/rankingTextViewID"
        app:layout_constraintTop_toBottomOf="@+id/guitarTitleTextViewId"
        tools:text="yearView" />

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>

